class Iterator
{
	protected:
	   unsigned long ClusterNumber;
	   BYTE* ClusterContent;
	   unsigned long ClustersTotal;
	   bool Done;
	   AbstractFS* FS;
	public:
		Iterator(AbstractFS* FS);
		unsigned long GetClusterNumber();
		BYTE* GetClusterContent();
		bool IsDone();
		void First();
		void Last();
		void Next();
		int Current();
        void Stop();
		bool GetData(byte *dataBuffer);
};

bool Decorator(BYTE* Content);

#endif
